<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Despues de Darle click -->
    <!-- "stroke" es el BORDE -->
    <!-- gradient es el DEGRADADO DEL BUTOON -->
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/naranjaClaro" />
            <!-- <stroke -->
            <!-- android:width="1dp" -->
            <!-- android:color="#35272e" /> -->
            <corners android:radius="60dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <!-- Antes de Darle Click -->
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/naranjaPastel" android:startColor="@color/naranjaPastel" />
            <!-- <stroke -->
            <!-- android:width="1dp" -->
            <!-- android:color="#35272e" /> -->
            <!-- <corners -->
            <!-- android:radius="50dp" /> -->
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>

</selector>
