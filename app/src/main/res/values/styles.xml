    </style>

    <style name="Layout_0dipWV">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout_MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout_MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout_WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout_WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--     ACTIVITY_LOGIN_CONTROLLER -->
    <style name="txv_login_titulo_mw" parent="Layout_MW">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azulS</item>
    </style>

    <style name="layout_login_margin_icono_text" parent="Layout_MWH">
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="layout_login_weight_icono" parent="Layout_MWH">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="layout_login_weight_text" parent="Layout_MWH">
        <item name="android:layout_weight">0.3</item>
    </style>

    <style name="edt_login_usuario_mw" parent="Layout_MW">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="edt_login_password_mw" parent="Layout_MW">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="btn_login_ingresar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azul</item>
    </style>

    <style name="btn_login_ADD">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azul</item>
    </style>



    <!-- modulo menu -->

