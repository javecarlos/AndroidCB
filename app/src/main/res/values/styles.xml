        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="layout_weight_leyenda" parent="Layout_MWV">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="img_consultaExpediente_estado">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5sp</item>
    </style>


    <style name="img_lista_menu_foto">
        <item name="android:layout_width">180sp</item>
        <item name="android:layout_height">180sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="img_lista_menu">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="img_lista_menu_text">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
