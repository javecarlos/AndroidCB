<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@drawable/bk3">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/blanco"
        app:theme="@style/ToolbarColoredBackArrow"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contacto"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etContactoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apellido"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etContactoApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etContactoTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="9"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etContactoCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la empresa"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etClienteNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DirecciÃ³n"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etClienteDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distrito"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etClienteDistrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Referencia"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/etClienteReferencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:text=""
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_edit_text"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>