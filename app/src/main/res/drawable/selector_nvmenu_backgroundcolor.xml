<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">

        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="#63FBFF" android:startColor="#008092" android:type="linear" />

        </shape>
    </item>
    <item android:state_checked="false">

        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="#00ABFF" android:startColor="#00486A" android:type="linear" />


        </shape>
    </item>

</selector>